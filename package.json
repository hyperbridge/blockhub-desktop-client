{
  "name": "blockhub-desktop-client",
  "productName": "BlockHub",
  "version": "1.0.0",
  "description": "BlockHub Desktop Client",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=app-icons/Icon-512.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . BlockHub --overwrite --asar=true --platform=win32 --arch=ia32 --icon=app-icons/Icon-512.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"BlockHub\""
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "express": "^4.16.3"
  }
}
